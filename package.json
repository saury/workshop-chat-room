{
    "name": "workshop-chat",
    "private": true,
    "dependencies": {
        "express": "^4.16.3",
        "next": "^5.1.0",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "winston": "^2.4.1"
    },
    "scripts": {
        "dev": "nodemon",
        "start": "node dist",
        "build": "yarn clean & tsc",
        "lint": "tslint -p . -c tslint.json",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,json,md}\"",
        "test": "jest",
        "clean": "rimraf dist coverage"
    },
    "devDependencies": {
        "typescript": "^2.8.1",
        "@types/express": "^4.11.1",
        "@types/jest": "^22.2.2",
        "@types/supertest": "^2.0.4",
        "@types/winston": "^2.3.8",
        "jest": "^22.4.3",
        "nodemon": "^1.17.2",
        "prettier": "^1.11.1",
        "rimraf": "^2.6.2",
        "supertest": "^3.0.0",
        "ts-jest": "^22.4.2",
        "ts-node": "^5.0.1",
        "tslint": "^5.9.1",
        "tslint-config-prettier": "^1.10.0",
        "tslint-immutable": "^4.5.2",
        "tslint-plugin-prettier": "^1.3.0"
    },
    "jest": {
        "setupFiles": [
            "./jest/mocks.ts"
        ],
        "collectCoverageFrom": [
            "**/*.ts"
        ],
        "coveragePathIgnorePatterns": [
            ".d.ts"
        ],
        "transform": {
            "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
        "moduleDirectories": [
            "node_modules",
            "src"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ]
    }
}
