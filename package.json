{
  "name": "workshop-chat",
  "private": true,
  "dependencies": {
    "express": "^4.16.3",
    "next": "^5.1.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "typescript": "^2.8.1"
  },
  "scripts": {
    "dev": "nodemon",
    "start": "ts-node src",
    "build": "",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,json,md}\"",
    "test": "jest"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.2",
    "jest": "^22.4.3",
    "nodemon": "^1.17.2",
    "prettier": "^1.11.1",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1"
  },
  "jest": {
    "setupFiles": [
      "./jest/mocks.ts"
    ],
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      ".d.ts"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
